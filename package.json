{
  "name": "old-salt-blog-migration",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "tinacms dev -c \"NODE_OPTIONS='--max-old-space-size=4096' astro dev\"",
    "dev:astro": "NODE_OPTIONS='--max-old-space-size=4096' astro dev",
    "build": "npm run backfill && NODE_OPTIONS='--max-old-space-size=4096' tinacms build && astro build && npx pagefind --site dist/client",
    "build:local": "npm run backfill && NODE_OPTIONS='--max-old-space-size=4096' astro build && npx pagefind --site dist/client",
    "preview": "astro preview",
    "astro": "astro",
    "migrate": "NODE_OPTIONS='--max-old-space-size=2048' npx tsx scripts/migrate/index.ts",
    "migrate:media-s3": "NODE_OPTIONS='--max-old-space-size=2048' npx tsx scripts/migrate/media-to-s3.ts",
    "migrate:comments-to-db": "NODE_OPTIONS='--max-old-space-size=2048' npx tsx scripts/migrate/comments-to-db.ts",
    "backfill": "NODE_OPTIONS='--max-old-space-size=2048' npx tsx scripts/migrate/backfill.ts",
    "type-check": "tsc --noEmit",
    "test": "echo 'No tests yet' && exit 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/node": "^9.5.2",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/vercel": "^9.0.4",
    "@aws-sdk/client-s3": "^3.981.0",
    "@libsql/client": "^0.17.0",
    "astro": "^5.17.1",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "node-fetch": "^3.3.2",
    "ora": "^9.1.0",
    "p-limit": "^7.2.0",
    "sharp": "^0.34.3",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@pagefind/default-ui": "^1.4.0",
    "@tinacms/cli": "^2.1.3",
    "@types/node": "^25.2.0",
    "@types/turndown": "^5.0.6",
    "drizzle-kit": "^0.31.8",
    "pagefind": "^1.4.0",
    "tinacms": "^3.4.0",
    "tsx": "^4.21.0"
  }
}
