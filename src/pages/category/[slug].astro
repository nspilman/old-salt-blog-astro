---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Get all unique categories
  const categories = new Set<string>();
  posts.forEach(post => {
    post.data.categories?.forEach(cat => categories.add(cat));
  });

  // Generate paths for each category
  return Array.from(categories).map(category => {
    const categoryPosts = posts
      .filter(post => post.data.categories?.includes(category))
      .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

    return {
      params: { slug: category.toLowerCase().replace(/\s+/g, '-') },
      props: { category, posts: categoryPosts }
    };
  });
}

const { category, posts } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Category: ${category} - Old Salt Blog`} description={`Posts in category: ${category}`} />
  </head>
  <body>
    <Header />
    <main>
      <section>
        <div class="page-header">
          <h1>Category: {category}</h1>
          <p class="category-description">
            Showing {posts.length} {posts.length === 1 ? 'post' : 'posts'} in this category
          </p>
        </div>

        <ul class="post-list">
          {posts.map((post) => (
            <li class="post-item">
              <a href={`/${post.data.slug}/`}>
                {post.data.featuredImage && (
                  <div class="post-image">
                    <img src={post.data.featuredImage} alt={post.data.title} loading="lazy" />
                  </div>
                )}
                <div class="post-content">
                  <h2 class="post-title">{post.data.title}</h2>
                  <div class="post-meta">
                    <FormattedDate date={post.data.date} />
                  </div>
                  {post.data.excerpt && (
                    <p class="post-excerpt">{post.data.excerpt}</p>
                  )}
                  <div class="post-categories">
                    {post.data.categories?.map((cat) => (
                      <span class="category-tag">{cat}</span>
                    ))}
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  /* Category pages - same soul */
  main {
    max-width: 1000px;
    margin: 0 auto;
    background: linear-gradient(180deg, #FDF8F0 0%, #F5EBD8 100%);
    min-height: calc(100vh - 160px);
    position: relative;
  }

  /* On smaller screens, go full-width */
  @media (max-width: 1040px) {
    main {
      max-width: 100%;
    }
  }

  section {
    max-width: 940px;
    margin: 0 auto;
    padding: 1.5rem 1rem;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-dark);
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.25rem;
    color: rgb(var(--black));
  }

  .category-description {
    font-size: 1rem;
    color: rgb(var(--gray));
    margin: 0;
    font-style: italic;
    font-weight: normal;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .post-item {
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--border-light);
  }

  .post-item:first-child {
    padding-top: 0;
  }

  .post-item a {
    display: block;
    text-decoration: none;
    color: inherit;
    font-weight: normal;
  }

  .post-item a:has(.post-image) {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: 1.25rem;
    align-items: start;
  }

  .post-image {
    width: 220px;
    height: 150px;
    overflow: hidden;
    background-color: rgb(var(--gray-light));
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    min-width: 0;
  }

  .post-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.375rem;
    color: rgb(var(--black));
    font-weight: 700;
    line-height: 1.3;
  }

  .post-item a:hover .post-title {
    color: var(--accent);
  }

  .post-meta {
    font-size: 0.875rem;
    color: rgb(var(--gray));
    margin-bottom: 0.5rem;
    font-weight: normal;
  }

  .post-excerpt {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: rgb(var(--gray-dark));
    margin: 0 0 0.75rem 0;
  }

  .post-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category-tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background-color: rgb(var(--accent-light));
    color: var(--accent);
    font-size: 0.75rem;
    font-weight: 700;
  }

  /* Tablet */
  @media (max-width: 768px) {
    section {
      padding: 1.25rem 1rem;
    }

    .page-header {
      margin-bottom: 1.5rem;
      padding-bottom: 0.875rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .category-description {
      font-size: 0.9375rem;
    }

    .post-item {
      padding: 1.25rem 0;
    }

    .post-item a:has(.post-image) {
      grid-template-columns: 1fr;
      gap: 0.875rem;
    }

    .post-image {
      width: 100%;
      height: 180px;
    }

    .post-title {
      font-size: 1.125rem;
    }

    .post-meta {
      font-size: 0.8125rem;
    }

    .post-excerpt {
      font-size: 0.875rem;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    section {
      padding: 1rem 0.875rem;
    }

    h1 {
      font-size: 1.375rem;
    }

    .post-item {
      padding: 1rem 0;
    }

    .post-image {
      height: 160px;
    }

    .post-title {
      font-size: 1.0625rem;
    }
  }
</style>
