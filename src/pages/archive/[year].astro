---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Pagination from '../../components/Pagination.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
	const allPosts = await getCollection('blog');

	// Group posts by year
	const postsByYear = new Map<number, typeof allPosts>();

	allPosts.forEach((post) => {
		const year = post.data.date.getFullYear();
		if (!postsByYear.has(year)) {
			postsByYear.set(year, []);
		}
		postsByYear.get(year)!.push(post);
	});

	const POSTS_PER_PAGE = 15;
	const paths = [];

	// For each year, create paginated paths
	for (const [year, posts] of postsByYear.entries()) {
		// Sort posts by date descending (newest first within the year)
		const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
		const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);

		// Create path for page 1 (main year page)
		paths.push({
			params: { year: year.toString() },
			props: {
				year,
				posts: sortedPosts.slice(0, POSTS_PER_PAGE),
				currentPage: 1,
				totalPages,
				totalPosts: sortedPosts.length,
			},
		});

		// Create paths for additional pages if needed
		for (let i = 2; i <= totalPages; i++) {
			const startIndex = (i - 1) * POSTS_PER_PAGE;
			const endIndex = startIndex + POSTS_PER_PAGE;
			paths.push({
				params: { year: `${year}-page-${i}` },
				props: {
					year,
					posts: sortedPosts.slice(startIndex, endIndex),
					currentPage: i,
					totalPages,
					totalPosts: sortedPosts.length,
				},
			});
		}
	}

	return paths;
}

const { year, posts, currentPage, totalPages, totalPosts } = Astro.props;

// Pagination URLs
const prevUrl =
	currentPage > 1
		? currentPage === 2
			? `/archive/${year}/`
			: `/archive/${year}-page-${currentPage - 1}/`
		: null;
const nextUrl = currentPage < totalPages ? `/archive/${year}-page-${currentPage + 1}/` : null;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`${year} Archive | ${SITE_TITLE}`}
			description={`Browse all ${totalPosts} posts from ${year}`}
		/>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="page-header">
					<h1>{year} Archive</h1>
					<p class="subtitle">
						{totalPosts.toLocaleString()} {totalPosts === 1 ? 'post' : 'posts'} from {year}
					</p>
				</div>

				<div class="post-list">
					{posts.map((post) => (
						<article class="post-preview">
							<a href={`/${post.data.slug}/`} class="post-link">
								{post.data.featuredImage && (
									<div class="post-image">
										<img src={post.data.featuredImage} alt={post.data.title} loading="lazy" />
									</div>
								)}
								<div class="post-content">
									<div class="post-meta">
										<span class="post-date">
											<FormattedDate date={post.data.date} />
										</span>
									</div>
									<h2>{post.data.title}</h2>
									{post.data.excerpt && (
										<p class="post-excerpt">{post.data.excerpt}</p>
									)}
									{post.data.categories && post.data.categories.length > 0 && (
										<div class="post-categories">
											{post.data.categories.slice(0, 3).map((category) => (
												<span class="category-tag">{category}</span>
											))}
										</div>
									)}
								</div>
							</a>
						</article>
					))}
				</div>

				{totalPages > 1 && (
					<Pagination currentPage={currentPage} totalPages={totalPages} baseUrl={`/archive/${year}/`} />
				)}

				<div class="archive-nav">
					<a href="/archive/" class="back-link">‚Üê Back to all years</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
