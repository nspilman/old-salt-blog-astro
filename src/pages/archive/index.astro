---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CompassRose from '../../components/CompassRose.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

// Get all blog posts
const allPosts = await getCollection('blog');

// Group posts by year and count them
const postsByYear = new Map<number, number>();

allPosts.forEach((post) => {
	const year = post.data.date.getFullYear();
	postsByYear.set(year, (postsByYear.get(year) || 0) + 1);
});

// Convert to array and sort by year descending (newest first)
const years = Array.from(postsByYear.entries())
	.map(([year, count]) => ({ year, count }))
	.sort((a, b) => b.year - a.year);

const totalPosts = allPosts.length;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Archive | ${SITE_TITLE}`}
			description="Browse all blog posts by year"
		/>
	</head>
	<body>
		<Header />
		<CompassRose />
		<main>
			<section>
				<div class="page-header">
					<h1>Archive</h1>
					<p class="subtitle">
						Browse all {totalPosts.toLocaleString()} posts by year
					</p>
				</div>

				<div class="year-list">
					{years.map(({ year, count }) => (
						<article class="year-card">
							<a href={`/archive/${year}/`} class="year-link">
								<h2>{year}</h2>
								<p class="post-count">
									{count.toLocaleString()} {count === 1 ? 'post' : 'posts'}
								</p>
							</a>
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Archive - The ship's log years */
	main {
		max-width: 1000px;
		margin: 0 auto;
		background: linear-gradient(180deg, #FDF8F0 0%, #F5EBD8 100%);
		min-height: calc(100vh - 160px);
		position: relative;
		z-index: 2;
	}

	section {
		max-width: 940px;
		margin: 0 auto;
		padding: 1.5rem 1rem;
	}

	/* On smaller screens, go full-width */
	@media (max-width: 1040px) {
		main {
			max-width: 100%;
		}
	}

	.page-header {
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid var(--border-dark);
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 0.25rem;
		color: rgb(var(--black));
	}

	.subtitle {
		font-size: 1rem;
		color: rgb(var(--gray));
		margin: 0;
		font-style: italic;
		font-weight: normal;
	}

	.year-list {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
		gap: 1rem;
	}

	.year-card {
		border: 1px solid var(--border-light);
		background: #FFFFFF;
	}

	.year-card:hover {
		border-color: var(--accent);
	}

	.year-link {
		display: block;
		padding: 1.5rem 1rem;
		text-decoration: none;
		color: inherit;
		text-align: center;
		font-weight: normal;
	}

	.year-link h2 {
		font-size: 1.5rem;
		margin: 0 0 0.25rem 0;
		color: rgb(var(--black));
		font-weight: 700;
	}

	.year-card:hover .year-link h2 {
		color: var(--accent);
	}

	.post-count {
		font-size: 0.875rem;
		color: rgb(var(--gray));
		margin: 0;
		font-weight: normal;
	}

	/* Tablet */
	@media (max-width: 768px) {
		section {
			padding: 1.25rem 1rem;
		}

		.page-header {
			margin-bottom: 1.5rem;
			padding-bottom: 0.875rem;
		}

		h1 {
			font-size: 1.5rem;
		}

		.subtitle {
			font-size: 0.9375rem;
		}

		.year-list {
			grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
			gap: 0.875rem;
		}

		.year-link {
			padding: 1.25rem 0.75rem;
		}

		.year-link h2 {
			font-size: 1.375rem;
		}

		.post-count {
			font-size: 0.8125rem;
		}
	}

	/* Small mobile */
	@media (max-width: 480px) {
		section {
			padding: 1rem 0.875rem;
		}

		.page-header {
			margin-bottom: 1.25rem;
		}

		h1 {
			font-size: 1.375rem;
		}

		.year-list {
			grid-template-columns: repeat(2, 1fr);
			gap: 0.75rem;
		}

		.year-link {
			padding: 1rem 0.5rem;
		}

		.year-link h2 {
			font-size: 1.25rem;
		}
	}
</style>
