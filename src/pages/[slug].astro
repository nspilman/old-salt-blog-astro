---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Comments from '../components/Comments.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import CompassRose from '../components/CompassRose.astro';

export const prerender = true;

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.data.slug },
		props: post,
	}));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
const { title, date, author, featuredImage, description, categories, tags, excerpt } = post.data;

// Use description or excerpt for SEO, fallback to empty string
const seoDescription = description || excerpt || '';
---

<html lang="en">
	<head>
		<BaseHead title={title} description={seoDescription} image={featuredImage} />
		<style>
			/* Single Post - The Captain's Log Entry */
			main {
				max-width: 1000px;
				margin: 0 auto;
				background: linear-gradient(180deg, #FDF8F0 0%, #F5EBD8 100%);
				min-height: calc(100vh - 160px);
				position: relative;
				z-index: 2;
			}

			/* On smaller screens, go full-width */
			@media (max-width: 1040px) {
				main {
					max-width: 100%;
				}
			}

			article {
				max-width: 940px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			.prose {
				max-width: 720px;
				margin: 0 auto;
				padding: 1.5rem 0;
				color: rgb(var(--gray-dark));
			}

			/* Title block */
			.title {
				margin-bottom: 1.5rem;
				padding-bottom: 1rem;
				border-bottom: 2px solid var(--border-dark);
			}

			.title h1 {
				margin: 0 0 0.5rem 0;
				font-size: 2rem;
				line-height: 1.25;
				color: rgb(var(--black));
			}

			.post-meta {
				color: rgb(var(--gray));
				font-size: 0.9rem;
				font-weight: normal;
			}

			.date {
				color: rgb(var(--gray));
			}

			.author {
				color: rgb(var(--gray));
			}

			.author::before {
				content: "by ";
			}

			/* Featured image - no rounded corners, traditional */
			.hero-image {
				width: 100%;
				margin-bottom: 1.5rem;
			}

			.hero-image img {
				display: block;
				width: 100%;
				max-height: 450px;
				object-fit: cover;
			}

			/* Content - readable, traditional blog feel */
			.content {
				line-height: 1.7;
				font-size: 1.0625rem;
			}

			.content p {
				margin-bottom: 1.25rem;
			}

			.content h2 {
				margin-top: 2rem;
				margin-bottom: 0.75rem;
				font-size: 1.5rem;
				color: rgb(var(--black));
			}

			.content h3 {
				margin-top: 1.5rem;
				margin-bottom: 0.5rem;
				font-size: 1.25rem;
				color: rgb(var(--black));
			}

			/* Image layout styles (portrait/landscape) are in global.css */
			/* Default for images before JS runs */
			.content img {
				max-width: 100%;
				height: auto;
				margin: 1.5rem 0;
			}

			/* Clear floats after paragraphs following images */
			.content p {
				overflow: hidden;
			}

			.content iframe {
				max-width: 100%;
				aspect-ratio: 16 / 9;
				width: 100%;
				height: auto;
				margin: 1.5rem 0;
			}

			/* Blockquote - blue bar accent */
			.content blockquote {
				margin: 1.5rem 0;
				padding: 0 0 0 1.25rem;
				border-left: 4px solid var(--accent);
				font-style: italic;
				color: rgb(var(--gray-dark));
			}

			/* Links in content - BOLD BLUE (the soul!) */
			.content a {
				color: var(--accent);
				font-weight: 700;
				text-decoration: none;
			}

			.content a:hover {
				text-decoration: underline;
			}

			/* Metadata section - simple border top */
			.metadata {
				margin: 2rem 0 1.5rem;
				padding: 1.25rem 0 0;
				border-top: 1px solid var(--border-light);
			}

			.metadata h3 {
				margin: 0 0 0.5rem 0;
				font-size: 0.8rem;
				font-weight: 700;
				color: rgb(var(--gray));
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			.metadata > div + div {
				margin-top: 1rem;
			}

			.tags-list, .categories-list {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.tags-list li, .categories-list li {
				display: inline-block;
			}

			/* Tags/categories as bold blue links */
			.tags-list a, .categories-list a {
				display: inline-block;
				color: var(--accent);
				font-weight: 700;
				text-decoration: none;
				font-size: 0.9rem;
			}

			.tags-list a:hover, .categories-list a:hover {
				text-decoration: underline;
			}

			/* Tablet */
			@media (max-width: 768px) {
				article {
					padding: 0 1rem;
				}

				.prose {
					padding: 1.25rem 0;
				}

				.title {
					margin-bottom: 1.25rem;
					padding-bottom: 0.875rem;
				}

				.title h1 {
					font-size: 1.5rem;
					margin-bottom: 0.375rem;
				}

				.post-meta {
					font-size: 0.8125rem;
				}

				.content {
					font-size: 0.9375rem;
					line-height: 1.65;
				}

				.content h2 {
					font-size: 1.375rem;
					margin-top: 1.75rem;
				}

				.content h3 {
					font-size: 1.125rem;
					margin-top: 1.25rem;
				}

				.content blockquote {
					padding-left: 1rem;
					margin: 1.25rem 0;
				}

				/* Image responsive styles in global.css */

				.metadata {
					margin: 1.5rem 0 1rem;
					padding-top: 1rem;
				}

				.tags-list a, .categories-list a {
					font-size: 0.8125rem;
				}
			}

			/* Small mobile */
			@media (max-width: 480px) {
				article {
					padding: 0 0.875rem;
				}

				.prose {
					padding: 1rem 0;
				}

				.title h1 {
					font-size: 1.375rem;
				}

				.content {
					font-size: 0.9rem;
				}

				.content h2 {
					font-size: 1.25rem;
				}

				.content p {
					margin-bottom: 1rem;
				}

				/* Mobile image styles in global.css */

				.metadata h3 {
					font-size: 0.75rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<CompassRose />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<div class="post-meta">
							<span class="date">
								<FormattedDate date={date} />
							</span>
							<span class="author">{author}</span>
						</div>
					</div>
					<div class="content" data-pagefind-body>
						<Content />
					</div>
					<script>
						// Apply portrait/landscape layout to content images
						document.querySelectorAll('.content img').forEach((img) => {
							const imgEl = img as HTMLImageElement;
							const applyLayout = () => {
								const isLandscape = imgEl.naturalWidth > imgEl.naturalHeight;
								imgEl.classList.add(isLandscape ? 'landscape' : 'portrait');
							};
							if (imgEl.complete) {
								applyLayout();
							} else {
								imgEl.addEventListener('load', applyLayout);
							}
						});
					</script>
					{(categories.length > 0 || tags.length > 0) && (
						<div class="metadata">
							{categories.length > 0 && (
								<div>
									<h3>Categories</h3>
									<ul class="categories-list">
										{categories.map((category) => (
											<li>
												<a href={`/category/${encodeURIComponent(category.toLowerCase().replace(/\s+/g, '-'))}/`}>
													{category}
												</a>
											</li>
										))}
									</ul>
								</div>
							)}
							{tags.length > 0 && (
								<div>
									<h3>Tags</h3>
									<ul class="tags-list">
										{tags.map((tag) => (
											<li>
												<a href={`/tag/${encodeURIComponent(tag.toLowerCase().replace(/\s+/g, '-'))}/`}>
													{tag}
												</a>
											</li>
										))}
									</ul>
								</div>
							)}
						</div>
					)}
				</div>
			</article>

			<!-- Comments Section -->
			<Comments slug={post.data.slug} />
		</main>
		<Footer />
	</body>
</html>
