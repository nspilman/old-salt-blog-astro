---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Pagination from '../components/Pagination.astro';
import CompassRose from '../components/CompassRose.astro';
import Sidebar from '../components/Sidebar.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection, render } from 'astro:content';
import { getImageDimensions, isLandscape } from '../utils/images';

export const prerender = true;

// Get all blog posts and sort by date descending (newest first)
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Helper to convert markdown to simple HTML and truncate by word count
function markdownToHtml(markdown: string, wordLimit: number = 200): string {
	// Remove images from markdown
	let content = markdown.replace(/!\[.*?\]\(.*?\)/g, '');

	// Convert markdown links to HTML links
	content = content.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2">$1</a>');

	// Convert bold/italic
	content = content.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
	content = content.replace(/\*([^*]+)\*/g, '<em>$1</em>');

	// Split into paragraphs
	const paragraphs = content.split(/\n\n+/).filter(p => p.trim());

	let wordCount = 0;
	const result: string[] = [];

	for (const para of paragraphs) {
		const cleanPara = para.replace(/\n/g, ' ').trim();
		if (!cleanPara) continue;

		const words = cleanPara.split(/\s+/);
		if (wordCount + words.length <= wordLimit) {
			result.push(`<p>${cleanPara}</p>`);
			wordCount += words.length;
		} else {
			const remaining = wordLimit - wordCount;
			if (remaining > 0) {
				const partialWords = words.slice(0, remaining).join(' ');
				result.push(`<p>${partialWords}</p>`);
			}
			break;
		}
	}

	return result.join('\n');
}

// Pagination configuration
const POSTS_PER_PAGE = 10;
const currentPage = 1; // This is always page 1 for index.astro
const totalPosts = sortedPosts.length;
const totalPages = Math.ceil(totalPosts / POSTS_PER_PAGE);

// Get posts for current page
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const paginatedPosts = sortedPosts.slice(startIndex, endIndex);

// Render content for each post and get image dimensions
const postsWithContent = await Promise.all(
	paginatedPosts.map(async (post) => {
		const { Content } = await render(post);
		const imageDimensions = post.data.featuredImage
			? await getImageDimensions(post.data.featuredImage)
			: null;
		const imageIsLandscape = isLandscape(imageDimensions);
		return { post, Content, imageIsLandscape };
	})
);

// Pagination URLs
const prevUrl = currentPage > 1 ? (currentPage === 2 ? '/' : `/page/${currentPage - 1}`) : null;
const nextUrl = currentPage < totalPages ? `/page/${currentPage + 1}` : null;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<CompassRose />
		<main>
			<div class="main-content">
				<section>
					<div class="page-header">
						<h1>Old Salt Blog</h1>
						<p class="subtitle">Maritime and nautical stories from around the world</p>
					</div>

					<div class="post-list">
						{postsWithContent.map(({ post, imageIsLandscape }) => (
							<article class="post-preview">
								<header class="post-header">
									<h2><a href={`/${post.data.slug}/`}>{post.data.title}</a></h2>
									<div class="post-meta">
										<span class="post-date">
											Posted on <FormattedDate date={post.data.date} />
											{post.data.author && <> by <span class="author">{post.data.author}</span></>}
										</span>
									</div>
								</header>
								<div class="post-body">
									{post.data.featuredImage && (
										<a href={`/${post.data.slug}/`} class={`post-image-link ${imageIsLandscape ? 'landscape' : 'portrait'}`}>
											<img src={post.data.featuredImage} alt={post.data.title} loading="lazy" />
										</a>
									)}
									<div class="post-content" set:html={markdownToHtml(post.body || '', 200)} />
									<p class="continue-reading">
										<a href={`/${post.data.slug}/`}>Continue reading <span class="arrow">â†’</span></a>
									</p>
								</div>
							</article>
						))}
					</div>

					<Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/" />
				</section>
			</div>
			<Sidebar />
		</main>
		<Footer />
	</body>
</html>

<style>
	/* The Ship's Log - Homepage styling */
	main {
		max-width: 1100px;
		margin: 0 auto;
		background: linear-gradient(180deg, #FDF8F0 0%, #F5EBD8 100%);
		min-height: calc(100vh - 160px);
		position: relative;
		z-index: 2;
		display: flex;
		gap: 0;
	}

	.main-content {
		flex: 1;
		min-width: 0;
	}

	section {
		max-width: 720px;
		margin: 0;
		padding: 1.5rem 1.5rem 1.5rem 2rem;
	}

	/* On smaller screens, go full-width and hide sidebar */
	@media (max-width: 1140px) {
		main {
			max-width: 1000px;
			display: block;
		}

		section {
			max-width: 940px;
			margin: 0 auto;
			padding: 1.5rem 1rem;
		}
	}

	@media (max-width: 1040px) {
		main {
			max-width: 100%;
		}
	}

	/* Header - subtle, not overpowering */
	.page-header {
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid var(--border-dark);
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 0.25rem;
		color: rgb(var(--black));
	}

	.subtitle {
		font-size: 1rem;
		color: rgb(var(--gray));
		margin: 0;
		font-style: italic;
	}

	/* Post list - traditional blog feel */
	.post-list {
		display: flex;
		flex-direction: column;
		gap: 0;
		margin-bottom: 2rem;
	}

	.post-preview {
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--border-light);
		overflow: hidden; /* Clear floats */
	}

	.post-preview:first-child {
		padding-top: 0;
	}

	/* Post header with title and meta */
	.post-header {
		margin-bottom: 0.75rem;
	}

	.post-header h2 {
		margin: 0 0 0.25rem 0;
		font-size: 1.5rem;
		line-height: 1.3;
	}

	.post-header h2 a {
		color: rgb(var(--black));
		text-decoration: none;
	}

	.post-header h2 a:hover {
		color: var(--accent);
	}

	/* Meta - subtle gray */
	.post-meta {
		margin-bottom: 0;
	}

	.post-date {
		font-size: 0.875rem;
		color: rgb(var(--gray));
		font-weight: normal;
	}

	.post-date .author {
		color: var(--accent);
	}

	/* Post body with floated image */
	.post-body {
		line-height: 1.7;
	}

	/* Image layout styles are in global.css */

	/* Post content paragraphs */
	.post-content {
		font-size: 1rem;
		color: rgb(var(--gray-dark));
	}

	.post-content :global(p) {
		margin: 0 0 1rem 0;
	}

	.post-content :global(a) {
		color: var(--accent);
		text-decoration: none;
	}

	.post-content :global(a:hover) {
		text-decoration: underline;
	}

	/* Continue reading link */
	.continue-reading {
		margin: 1rem 0 0 0;
		clear: both;
	}

	.continue-reading a {
		color: var(--accent);
		text-decoration: none;
		font-weight: normal;
	}

	.continue-reading a:hover {
		text-decoration: underline;
	}

	.continue-reading .arrow {
		margin-left: 0.25rem;
	}

	/* Tablet */
	@media (max-width: 768px) {
		section {
			padding: 1.25rem 1rem;
		}

		.page-header {
			margin-bottom: 1.5rem;
			padding-bottom: 0.875rem;
		}

		h1 {
			font-size: 1.5rem;
		}

		.subtitle {
			font-size: 0.9375rem;
		}

		.post-preview {
			padding: 1.25rem 0;
		}

		.post-header h2 {
			font-size: 1.25rem;
		}

		/* Image responsive styles in global.css */

		.post-content {
			font-size: 0.9375rem;
		}
	}

	/* Small mobile - image goes above text */
	@media (max-width: 480px) {
		section {
			padding: 1rem 0.875rem;
		}

		.page-header {
			margin-bottom: 1.25rem;
		}

		h1 {
			font-size: 1.375rem;
		}

		.post-preview {
			padding: 1rem 0;
		}

		.post-header h2 {
			font-size: 1.125rem;
		}

		/* Mobile image styles in global.css */

		.post-list {
			margin-bottom: 1.5rem;
		}
	}
</style>
