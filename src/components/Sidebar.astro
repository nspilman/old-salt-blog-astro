---
import { FEATURED_BOOKS } from '../consts';
---

<aside class="sidebar">
	<section class="sidebar-section">
		<h3>Featured Books</h3>
		<div class="book-list">
			{FEATURED_BOOKS.map((book) => (
				<a href={book.url} class="book-item" target="_blank" rel="noopener noreferrer">
					<img src={book.image} alt={book.title} loading="lazy" />
					<span class="book-title">{book.title}</span>
					<span class="book-author">by {book.author}</span>
				</a>
			))}
		</div>
	</section>
</aside>

<style>
	.sidebar {
		width: 220px;
		flex-shrink: 0;
		padding: 1.5rem 1rem 1.5rem 0;
	}

	.sidebar-section h3 {
		font-size: 1.125rem;
		margin: 0 0 1rem 0;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid var(--border-dark);
		color: rgb(var(--black));
	}

	.book-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.book-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		text-decoration: none;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid var(--border-light);
	}

	.book-item:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	.book-item img {
		width: 140px;
		height: auto;
		margin-bottom: 0.5rem;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
	}

	.book-title {
		font-size: 0.9rem;
		font-weight: 700;
		color: var(--accent);
		line-height: 1.3;
	}

	.book-author {
		font-size: 0.8rem;
		color: rgb(var(--gray));
		font-weight: normal;
	}

	.book-item:hover .book-title {
		text-decoration: underline;
	}

	/* Hide on tablet and mobile */
	@media (max-width: 1140px) {
		.sidebar {
			display: none;
		}
	}
</style>
