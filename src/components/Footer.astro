---
import { SITE_TITLE } from '../consts';
import NewsletterSignup from './NewsletterSignup.astro';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<NewsletterSignup />
		<p>&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.</p>
		<p class="tagline">Maritime and nautical stories since 2008</p>
	</div>
</footer>
<style>
	footer {
		padding: 3em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
		border-top: 1px solid rgb(var(--gray-light));
		margin-top: 4em;
	}

	.footer-content {
		max-width: 900px;
		margin: 0 auto;
	}

	footer p {
		margin: 0.5em 0;
		font-size: 0.9em;
	}

	.tagline {
		font-style: italic;
		color: rgb(var(--gray));
	}

	@media (max-width: 768px) {
		footer {
			padding: 2em 1em;
		}

		footer p {
			font-size: 0.85em;
		}
	}
</style>
