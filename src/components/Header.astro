---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import Search from './Search.astro';
---

<div class="header-banner">
	<img src="https://old-salt-blog-media.s3.us-east-2.amazonaws.com/uploads/2011/07/cropped-oldsaltblog2.jpg" alt="Old Salt Blog" />
</div>
<header>
	<div class="header-inner">
		<div class="site-branding">
			<a href="/" class="site-title">{SITE_TITLE}</a>
			<span class="site-tagline">A virtual port of call for all those who love the sea</span>
		</div>
		<nav>
			<button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
				<span class="hamburger"></span>
			</button>
			<div class="nav-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/archive/">Archive</HeaderLink>
				<HeaderLink href="/about/">About</HeaderLink>
				<Search />
			</div>
		</nav>
	</div>
</header>

<script>
	const toggle = document.querySelector('.mobile-menu-toggle');
	const navLinks = document.querySelector('.nav-links');

	toggle?.addEventListener('click', () => {
		const expanded = toggle.getAttribute('aria-expanded') === 'true';
		toggle.setAttribute('aria-expanded', (!expanded).toString());
		navLinks?.classList.toggle('open');
	});
</script>

<style>
	.header-banner {
		max-width: 1100px;
		margin: 0 auto;
		overflow: hidden;
	}

	.header-banner img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
	}

	header {
		background: #000000;
		position: sticky;
		top: 0;
		z-index: 100;
		max-width: 1100px;
		margin: 0 auto;
	}

	/* Tablet - reduce to content width when sidebar hidden */
	@media (max-width: 1140px) {
		.header-banner {
			max-width: 1000px;
		}

		header {
			max-width: 1000px;
		}
	}

	/* On smaller screens, go full-width */
	@media (max-width: 1040px) {
		.header-banner {
			max-width: 100%;
		}

		header {
			max-width: 100%;
		}
	}

	.header-inner {
		padding: 0 1.5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 60px;
	}

	.site-branding {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.site-title {
		font-size: 1.4rem;
		font-weight: 700;
		color: var(--nav-text);
		text-decoration: none;
		letter-spacing: -0.02em;
		line-height: 1.2;
	}

	.site-title:hover {
		color: var(--accent);
	}

	.site-tagline {
		font-size: 0.75rem;
		color: rgba(255, 255, 255, 0.6);
		font-style: italic;
		letter-spacing: 0.02em;
	}

	nav {
		display: flex;
		align-items: center;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0;
	}

	.nav-links :global(a) {
		color: var(--nav-text);
		text-decoration: none;
		padding: 1.2rem 1rem;
		font-size: 0.9rem;
		font-weight: normal;
		transition: background-color 0.2s, color 0.2s;
		display: block;
	}

	.nav-links :global(a:hover),
	.nav-links :global(a.active) {
		background: var(--nav-hover-bg);
		color: rgb(var(--black));
	}

	/* Mobile menu toggle */
	.mobile-menu-toggle {
		display: none;
		background: none;
		border: none;
		padding: 0.5rem;
		cursor: pointer;
	}

	.hamburger {
		display: block;
		width: 24px;
		height: 2px;
		background: var(--nav-text);
		position: relative;
		transition: background 0.2s;
	}

	.hamburger::before,
	.hamburger::after {
		content: '';
		position: absolute;
		width: 24px;
		height: 2px;
		background: var(--nav-text);
		left: 0;
		transition: transform 0.2s;
	}

	.hamburger::before {
		top: -7px;
	}

	.hamburger::after {
		top: 7px;
	}

	/* Mobile styles */
	@media (max-width: 768px) {
		.header-inner {
			padding: 0 1rem;
		}

		.mobile-menu-toggle {
			display: block;
		}

		.nav-links {
			position: absolute;
			top: 60px;
			left: 0;
			right: 0;
			background: var(--nav-bg);
			flex-direction: column;
			align-items: stretch;
			display: none;
			border-top: 1px solid rgba(255, 255, 255, 0.1);
		}

		.nav-links.open {
			display: flex;
		}

		.nav-links :global(a) {
			padding: 1rem 1.5rem;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		}

		.site-title {
			font-size: 1.2rem;
		}

		.site-tagline {
			font-size: 0.65rem;
		}
	}
</style>
